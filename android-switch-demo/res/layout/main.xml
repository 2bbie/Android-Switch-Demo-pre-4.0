<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mySwitch="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FF555555"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.appscumen.example">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Switch with Text on Toggle" />

    <com.appscumen.example.MySwitch
        android:id="@+id/switch1"
        style="@style/mySwitchStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        mySwitch:textOff="NotToBe"
        mySwitch:textOn="ToBe" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="15dp" />

    
    <com.appscumen.example.MySwitch
        android:id="@+id/switch2"
        style="@style/mySwitchStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        mySwitch:textOff="OFF"
        mySwitch:textOn="ON"
        mySwitch:textOnThumb="false"
        mySwitch:thumb="@drawable/switch_thumb"
        mySwitch:track="@drawable/switch_track" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="11dp" />


    <com.appscumen.example.MySwitch
        android:id="@+id/switch3"
        style="@style/mySwitchStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        mySwitch:textOff=" "
        mySwitch:textOn=" Slide to unlock "
        mySwitch:textOnThumb="false"
        mySwitch:thumb="@drawable/switch_thumb"
        mySwitch:track="@drawable/switch_track" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="15dp" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.appscumen.example.MySwitch
            android:id="@+id/switch4"
            style="@style/mySwitchStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            mySwitch:textOff=" "
            mySwitch:textOn=" "
            mySwitch:textOnThumb="false"
            mySwitch:thumb="@drawable/switch_thumb"
            mySwitch:track="@drawable/switch_track" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/switch4"
            android:id="@+id/Yes"
            android:text="Yes  " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/switch4"
            android:id="@+id/No"
            android:text=" No" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="11dp" />
    
    
           <com.appscumen.example.MySwitch
                    style="@style/mySwitchStyle"
                    android:id="@+id/pickup2"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    mySwitch:textOnThumb="false"
                    mySwitch:thumbExtraMovement="17dp"
                    mySwitch:thumb="@drawable/rswitch_button_small"
                    mySwitch:track="@drawable/rgroove_copy"
                    mySwitch:backgroundMask="@drawable/rgroove_mask"
                    mySwitch:textOn="Right"
                    mySwitch:textOff="Left" 
                    /> 
                    
      
           <com.appscumen.example.MySwitch
                    style="@style/mySwitchStyle"
                    android:id="@+id/pickup3"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    mySwitch:pushStyle="true"
                    mySwitch:textOnThumb="false"
                    mySwitch:thumbExtraMovement="27dp"
                    mySwitch:trackTextPadding="2dp"
                    mySwitch:thumb="@drawable/stoggle_copy"
                    mySwitch:track="@drawable/sgroove_copy"
                    mySwitch:textOn="OnText(Right)"
                    mySwitch:textOff="OffText(Left)" 
                    mySwitch:leftBackground="@drawable/sleft_background_copy"
                    mySwitch:rightBackground="@drawable/sright_background_copy"
                    mySwitch:backgroundMask="@drawable/smask_background_copy"
                    /> 
                    
       <com.appscumen.example.MySwitch
                    style="@style/mySwitchStyle"
                    android:id="@+id/pickup3"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    mySwitch:pushStyle="true"
                    mySwitch:textOnThumb="false"
                    mySwitch:thumbExtraMovement="27dp"
                    mySwitch:trackTextPadding="2dp"
                    mySwitch:thumb="@drawable/stoggle_copy1"
                    mySwitch:track="@drawable/sgroove_copy"
                    mySwitch:textOn="Off"
                    mySwitch:textOff="On" 
                    mySwitch:leftBackground="@drawable/sleft_background_copy1"
                    mySwitch:rightBackground="@drawable/sright_background_copy1"
                    mySwitch:backgroundMask="@drawable/smask_background_copy"
                    /> 
</LinearLayout>